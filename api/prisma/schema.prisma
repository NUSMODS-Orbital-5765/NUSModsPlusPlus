// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int       @id @default(autoincrement())
  name           String
  studentId      String    @unique
  username       String    @unique
  password       String
  faculty        String
  primaryMajor   String
  secondaryMajor String?
  minors         String?
  programme      String
  interests      String[]
  Post           Post[]
  Comment        Comment[]
}

model Post {
  id           Int      @id @default(autoincrement())
  title        String
  dateCreated  DateTime
  relatedMajor String?
  category     String
  content      String
  upload_file  String[]
  tags         String[]
  author       User     @relation(fields: [authorId], references: [id])
  authorId     Int
  avatar       String
  likes        String
  comment      String
}

model Comment {
  id       Int  @id @default(autoincrement())
  author   User @relation(fields: [authorId], references: [id])
  authorId Int
}
